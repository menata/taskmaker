<div align="left" style="margin-left:300px;">
<table id="report"  border="1" style="border-color:transparent;">
  <tr id="1"><th></th></tr>
  <% @pitems.each do |p| %>  
  <tr>
    <td style="background:#006699;">
     <span class="pp"><i class="icon-list-alt" style="margin-left:10px;"></i></span>
     <span class="p_name">&nbsp;&nbsp;<%= link_to p.pname, pitem_path(p), :style=>"color:white" %></span>
     <span><%= link_to raw('<i class="icon-edit"></i>'), edit_pitem_path(p), :style=>"color:#08C;", :title=>"Edit Project" %></span>
     <span class="ep_small">
      <%= button_to 'x', pitem_path(p), :method=>:delete, :style=>"background-color:transparent;border:0;margin-bottom:4px;color:#08C;", :title=>"Delete Project" %>
     </span>
    </td>
  </tr>
  <tr>
    <td>  
    <section>
      <span class="input-append" style="display:inline-block;margin-bottom:9px;">
       <%= link_to image_tag("1356806217_plus.png",  :width => 25, :height => 25, :title => "Click here to Add Task", :class=>"iplus"), new_pitem_task_path(p) %>    
       <% String tt = "/"+p.id.to_s+"/tasks/new" %>
       <%= form_tag("/pitems"+tt, :method => "get", :id=>"s") do %>
       <input type="text" class="dd" name="ff" placeholder="Type some text here..." id="ff">
       <%=submit_tag("Add Task", :class=>"btn", :title=>"Click here to Add Task", :id=>"ba", :style=>"color:rgb(128,120,120);display:inline-block;height:30px;")%>
       <% end %>           
       </span>
        <div  class="l" style="display:none;valign:middle;"><br> 
        <ul class="ddd" style="list-style-type:none;display:inline;">
        <% p.tasks.each do |t| %> 
        <li id="p<%= t.id.to_s %>" class="ui-state-default" style="min-height:20px;max-height:21px;margin-left:20px;margin-right:20px;margin-bottom:1px;border: 1px solid rgb(9, 80, 15);background: rgba(224, 220, 224,0.2)">              
        <% if t.status == 'Done'%>
        <span class="ttn"><%= link_to t.tname, pitem_task_path(t.pitem, t), :style=>"color:#08C"%>
        </span>            
        <% else %>   
        <span class="tn"><%= link_to t.tname, pitem_task_path(t.pitem, t), :style=>"color:#08C"%></span>   
        <% end %>   
        <span class="ico" title="Edit Task">
        <%= link_to raw('<i class="icon-edit"></i>'), "/pitems/"+t.pitem_id.to_s+"/tasks/"+t.id.to_s+"/edit", :style=>"color:#08C"%>
        </span>
        <span style="display:inline-block;">
        <%= button_to 'x', pitem_task_path(t.pitem, t), :method=>:delete, :title=>"Delete Task", :style=>"border:0;margin-bottom:4px;color:#08C;background-color:transparent;margin-left:0px;"%>
        </span>       
      </li>
      <% end %>  
    </ul><br> 
    </div>
    <div class="arr"></div>
   </section>
  </td></tr>
  <% end %>
</table>
<br>
<br>

<div class="addiv" style="display:inline-block;">
 &nbsp;&nbsp;<%= link_to image_tag("1356806217_plus.png",  :width => 25, :height => 25, :title => "Click here to Add Project", :class=>"ip"), new_pitem_path(@pitem) %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 
 <span><%= link_to "Add Project", "/pitems/new", :style=>"color:#ffffff;"%></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 
</div>     
</div>
