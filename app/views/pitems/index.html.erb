        <li id="p<%= t.id.to_s %>" class="ui-state-default" style="min-height:20px;max-height:21px;margin-left:20px;margin-right:20px;margin-bottom:1px;border: 1px solid rgb(9, 80, 15);background: rgba(224, 220, 224,0.2)">              
        <% if t.status == 'Done'%>
        <span class="ttn"><%= link_to t.tname, pitem_task_path(t.pitem, t), :style=>"color:#08C"%>
        </span>            
        <% else %>   
        <span class="tn"><%= link_to t.tname, pitem_task_path(t.pitem, t), :style=>"color:#08C"%></span>   
        <% end %>   
        <span class="ico" title="Edit Task">
        <%= link_to raw('<i class="icon-edit"></i>'), "/pitems/"+t.pitem_id.to_s+"/tasks/"+t.id.to_s+"/edit", :style=>"color:#08C"%>
        </span>
        <span style="display:inline-block;">
