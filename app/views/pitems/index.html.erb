<table id="report" align="center" border="1">
  <tr><th></th></tr>
  <% @pitems.each do |p| %>  
  <tr>
    <td style="background:#006699;padding:5px;">
     <span class="pp"><i class="icon-list-alt" style="margin-left:10px;"></i></span>
     <span class="p_name">&nbsp;&nbsp;<%= link_to p.pname, pitem_path(p) %></span>
     <span class="ep">
       <%= link_to raw('<i class="icon-edit"></i>'), edit_pitem_path(p) %></span>
     <span class="ep_small"><%= button_to 'x', pitem_path(p), :method=>:delete, :style=>"background:#006699;border:0;margin-bottom:4px;color:#08C;",  data: {confirm: 'Are you sure?'} %></span>
    </td>
  </tr>
  <tr>
  <td>  
      <span class="input-append" style="display:inline-block;margin-bottom:9px;">
      <%= link_to image_tag("1356806217_plus.png",  :width => 25, :height => 25, :title => "Click here to Add Task", :class=>"iplus"), new_pitem_task_path(p) %>
 <input id="ff" class="input-xxlarge" type="text" placeholder=".input-xxlarge" value="Start typing some text here.."  style="width:600px;">          
 <%= button_to "Add Task",  new_pitem_task_path(p), :method =>:get,  :style=>"border:0px;height:20px;opacity:0.2;background-color: #ffffff;color:#000000;", :form_class=>"btn", :title=>"Click here to Add Task",:type=>"button"%>
      </span>
        <% p.tasks.each do |t| %>        
      <p id="l" class="l">
       <span class="tn"><%= link_to t.tname, "/pitems/"+t.pitem_id.to_s+"/tasks/"+t.id.to_s%></span>
       <span class="ico"><i class="icon-trash"></i></span>
      </p>
      <% end %>   
    <div class="arr"></div></td></tr>
  <% end %>
</table>













