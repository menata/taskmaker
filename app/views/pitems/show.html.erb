<table style="margin-left:50px;">
<tr><th align="left"><h1><%= @pitem.pname %></h1></th></tr>
<tr><td align="left"><%= link_to "Edit", edit_pitem_path(@pitem)%></td></tr>
<tr><td align="left"><%= link_to "Add task", new_pitem_task_path(@pitem) %></td></tr>
<tr><td align="left"><%= link_to "Show Tasks", pitem_tasks_path(@pitem)%></td></tr>
</table> 

<% form_for @pitem do |f| %>
  <%= f.text_field :pname %>
  <% f.fields_for :tasks do |tasks_form| %>
    <%= tasks_form.text_field :tname %>
  <% end %>
<% end %>



