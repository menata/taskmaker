
<h1 style="margin-left:50px;">Edit Task</h1>
<%= form_for [@pitem,@task], :url => "/pitems/"+params[:pitem_id]+"/tasks/"+@task.id.to_s, :html => { multipart: true}  do |f| %>
<table style="margin-left:50px;" id="edit">
<tr><td>Name:&nbsp;</td><td><%= f.text_field :tname %></td><td>&nbsp;Deadline:&nbsp;</td><td><%= f.text_field :expires_at, :id => "datepicker" %></td></tr>
<tr><td>Priority:&nbsp;</td><td colspan="3"><%= f.text_field :priority %></td></tr>
<tr><td>Status:&nbsp;</td><td colspan="3"><%= f.select(:status, [['New', 'New'], ['Done', 'Done']])%></td></tr>
<tr><td colspan="1"></td><td colspan="3"><%= f.submit "Save"%></td></tr>
</table>
<% end %> 
